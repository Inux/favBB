{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "dom",
            "es2017"
        ],
        "types": ["jest"],
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noEmit": true,
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": "src"
    },
    "include": [
        "src",
        "**/*.spec.ts"
    ],
    "exclude": [
        "node_modules",
        "public",
        "dist"
    ]
}
